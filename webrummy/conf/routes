# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /state                  controllers.RummyController.state
GET         /getDesk                controllers.RummyController.getDesk
GET         /getViewOfBoard         controllers.RummyController.getViewOfBoard

GET         /                       controllers.RummyController.newGame()
#GET         /rummy/:input           controllers.RummyController.rummy(input)
GET         /rummy                  controllers.RummyController.newGame()
GET         /rules                  controllers.RummyController.rules
#GET         /setName/:name          controllers.RummyController.nameInput(name)
GET         /getCurrentPlayerName   controllers.RummyController.getCurrentPlayerName()

GET         /socket                 controllers.RummyController.socket()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
